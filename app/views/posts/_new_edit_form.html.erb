<% if @post.errors.any? %>
  <div class="row">
    </div class="alert alert-error span8">
      <h5>Please correct the following errors:</h5>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>

<div class="well">
  <%= form_for @post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    
    <%= f.label :url, "URL" %>
    <%= f.text_field :url %>
    
    <%= f.label :description %>
    <%= f.text_area :description, rows: 5 %>
    <br/>
    <%= f.submit "#{@action} Post", class: "btn btn-primary" %>
  <% end %>
</div>