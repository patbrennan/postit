<div class="row">
  <div class="span8 well">
    
    <%= render post.categories %>
    
    <h4><%= link_to post.title, post_path(post) %></h4>
    <p>
      <%= post.description %>
      <% if logged_in? %>
        <small>
            (<%= link_to 'edit', edit_post_path(post) %>)
        </small>
      <% end %>
    </p>
    <p>
      <small>
        <span class="quiet">posted by</span> <%= link_to post.user.username || "unknown", user_path(post.user) %>
        on <%= format_date(post.created_at) %>.
      </small>
      <small>
        <%= link_to("#{post.comments.size} comments", post_path(post)) %>
      </small>
    </p>
  </div>
</div>