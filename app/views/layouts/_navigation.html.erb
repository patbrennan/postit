<ul class="nav">
  <li>
    <%= link_to "Postit!", root_path, :class => 'brand' %>
  </li>
</ul>

<div class="btn-group nav_item">
  <%= link_to '#', class: "btn btn-small dropdown-toggle", "data-toggle" => "dropdown" do %>
    Categories <span class="caret"></span>
  <% end %>
  
  <ul class="dropdown-menu">
    <% Category.all.each do |cat| %>
      <li><%= link_to "#{cat.name}", category_path(cat) %></li>
    <% end %>
    
    <% if logged_in? and current_user.admin? %>
      <li class="divider"></li>
      <li>
        <%= link_to(new_category_path) do %>
          <i class="icon-plus"></i>
          New Category
        <% end %>
      </li>
    <% end %>
  </ul>
</div>


<% if logged_in? %>
  <div class="nav_item">
    <%= link_to 'New Post', new_post_path, class: "btn btn-success btn-small" %>
  </div>
  <div class="nav_item">
    <%= link_to "Log Out", logout_path, class: "btn btn-small" %>
  </div>
  
  <div class="btn-group nav_item">
    <%= link_to '#', class: "btn btn-small dropdown-toggle", "data-toggle" => "dropdown" do %>
      <%= current_user.username %> <span class="caret"></span>
    <% end %>
    
    <ul class="dropdown-menu">
      <li>
        <%= link_to "<i class='icon-pencil'></i>edit profile".html_safe, edit_user_path(current_user) %>
      </li>
      <li>
        <%= link_to "<i class='icon-user'></i>view profile".html_safe, user_path(current_user) %>
      </li>
      <li>
        <%= link_to "<i class='icon-arrow-right'></i>logout".html_safe, logout_path %>
      </li>
    </ul>
  </div>
<% else %>
  <div class="nav_item">
    <%= link_to 'Register', register_path, class: "btn btn-success btn-small" %>
  </div>
  <div class="nav_item">
    <%= link_to "Log In", login_path, class: "btn btn-small" %>
  </div>
<% end %>